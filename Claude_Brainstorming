The Living Workshop - Secret Features
"While You Were Gone" Events
javascriptfunction checkTimeSinceLastVisit() {
  const hoursSince = getHoursSinceLastVisit();
  
  if (hoursSince > 72) {
    // Workshop tried to build something
    showPartialConstruct({
      pieces: randomPiecesFromInventory(3),
      note: "The workshop missed you and tried to remember how building works"
    });
  }
  
  if (hoursSince > 168) { // A week
    // A new friend appeared
    addLonelyConstruct({
      name: "Workshop's Attempt #" + Math.floor(Math.random() * 100),
      description: "It taught itself to build. It's not very good yet, but it's trying."
    });
  }
}
